html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title User Home
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
      }
      
      h1 {
        text-align: center;
      }
      
      .tasks {
        text-align: center;
        margin-top: 20px;
      }
      
      .tasks ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      
      .tasks li {
        padding: 10px;
        border-bottom: 1px solid #ccc;
      }
      
      .tasks li:last-child {
        border-bottom: none;
      }
      
      .tasks a {
        text-decoration: none;
        color: #007bff;
      }
      
      .tasks a:hover {
        color: #0056b3;
      }
            table {
        border-collapse: collapse;
        width: 100%;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
      }
      th {
        background-color: #f0f0f0;
      }

  body
    p Hello #{username}!
    //- p Your ID is #{userid}.
    form(action=`/user/${username}/${userid}`, method="POST")
      label(for="taskname") Task Name:
      input(type="text", id="taskname", name="taskname", required)
      br
      button(type="submit") Add Task
    br
    form(action=`/removetasks/${username}/${userid}`, method="POST")
      label(for="taskid") Task ID:
      input(type="text", id="taskid", name="taskid", required)
      br
      button(type="submit") removetasks
    br
    h1 Your Tasks
    table
      thead
        tr
          th ID
          th Task
      tbody
        each task in tasks
          tr
            td #{tasks.indexOf(task) + 1}
            td #{task}
    a(href="/") Logout


