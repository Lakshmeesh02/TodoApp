html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title User Home
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
      }
      
      h1 {
        text-align: center;
      }
      
      .tasks {
        text-align: center;
        margin-top: 20px;
      }
      
      .tasks ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      
      .tasks li {
        padding: 10px;
        border-bottom: 1px solid #ccc;
      }
      
      .tasks li:last-child {
        border-bottom: none;
      }
      
      .tasks a {
        text-decoration: none;
        color: #007bff;
      }
      
      .tasks a:hover {
        color: #0056b3;
      }
  body
    p Hello #{username}!
    //- p Your ID is #{userid}.
    form(action=`/user/${username}/${userid}`, method="POST")
      label(for="taskname") Task Name:
      input(type="text", id="taskname", name="taskname", required)
      br
      button(type="submit") Add Task
    a(href="/") Logout

